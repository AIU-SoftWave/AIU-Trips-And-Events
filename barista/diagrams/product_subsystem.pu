@startuml Product Subsystem

' ==================== Color Definitions ====================
!define ENTITY_COLOR #E3F2FD
!define INTERFACE_COLOR #E8F5E9

skinparam classAttributeIconSize 0
skinparam class {
    BackgroundColor<<entity>> ENTITY_COLOR
    BackgroundColor<<interface>> INTERFACE_COLOR
}

title Product Subsystem

package "Product Subsystem" <<Rectangle>> #E3F2FD {
    
    ' Facade Interfaces (exposed to other subsystems)
    interface IDrink <<interface>> {
        +getName(): String
        +getTemperature(): int
        +setName(name: String): void
        +setTemperature(temp: int): void
    }
    
    interface ICoffee <<interface>> {
        +getCoffeeType(): String
        +setCoffeeType(type: String): void
    }
    
    interface ITea <<interface>> {
        +getTeaType(): String
        +setTeaType(type: String): void
    }
    
    ' Internal components (concrete products)
    class LatteCoffee <<entity>> {
        -name: String
        -temperature: int
        -coffeeType: String
        +LatteCoffee()
        +getName(): String
        +setName(name: String): void
        +getTemperature(): int
        +setTemperature(temp: int): void
        +getCoffeeType(): String
        +setCoffeeType(type: String): void
    }
    
    class BlackCoffee <<entity>> {
        -name: String
        -temperature: int
        -coffeeType: String
        +BlackCoffee()
        +getName(): String
        +setName(name: String): void
        +getTemperature(): int
        +setTemperature(temp: int): void
        +getCoffeeType(): String
        +setCoffeeType(type: String): void
    }
    
    class EnglishTea <<entity>> {
        -name: String
        -temperature: int
        -teaType: String
        +EnglishTea()
        +getName(): String
        +setName(name: String): void
        +getTemperature(): int
        +setTemperature(temp: int): void
        +getTeaType(): String
        +setTeaType(type: String): void
    }
    
    class GreenTea <<entity>> {
        -name: String
        -temperature: int
        -teaType: String
        +GreenTea()
        +getName(): String
        +setName(name: String): void
        +getTemperature(): int
        +setTemperature(temp: int): void
        +getTeaType(): String
        +setTeaType(type: String): void
    }
    
    ' Relationships
    ICoffee --|> IDrink
    ITea --|> IDrink
    LatteCoffee ..|> ICoffee
    BlackCoffee ..|> ICoffee
    EnglishTea ..|> ITea
    GreenTea ..|> ITea

}

@enduml
